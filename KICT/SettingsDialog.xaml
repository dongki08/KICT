<Window x:Class="KICT.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="설정"
        Height="260" Width="420"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="NoResize">

    <Border CornerRadius="12"
            Background="{DynamicResource CardBackgroundBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="#000000" Opacity="0.2" BlurRadius="16" ShadowDepth="4" Direction="270"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="{DynamicResource PrimaryBrush}" CornerRadius="12,12,0,0">
                <TextBlock Text="설정"
                           Foreground="{DynamicResource TextOnPrimaryBrush}"
                           FontSize="16"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
            </Border>

            <StackPanel Grid.Row="1" Margin="30,20">
                <TextBlock Text="테마"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Margin="0,0,0,12"/>

                <RadioButton x:Name="LightThemeRadio"
                             Content="화이트 (Light)"
                             GroupName="ThemeGroup"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             FontSize="14"
                             Margin="0,0,0,8"
                             Checked="LightThemeRadio_Checked"/>
                <RadioButton x:Name="DarkThemeRadio"
                             Content="다크 (Dark)"
                             GroupName="ThemeGroup"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             FontSize="14"
                             Checked="DarkThemeRadio_Checked"/>
            </StackPanel>

            <Grid Grid.Row="2" Margin="30,0,30,20">
                <Button Content="닫기"
                        Height="40"
                        Background="{DynamicResource ButtonSecondaryBackgroundBrush}"
                        BorderBrush="{DynamicResource ButtonSecondaryBorderBrush}"
                        BorderThickness="1"
                        Foreground="{DynamicResource TextPrimaryBrush}"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="CloseButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="{DynamicResource ButtonSecondaryBackgroundBrush}"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="8">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource ButtonSecondaryHoverBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>
