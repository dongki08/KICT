<Window x:Class="KICT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Test Report System"
        Height="800" Width="720"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True" WindowStyle="None">

    <Window.Resources>
        <Style x:Key="ModernInput" TargetType="Control">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E6ED"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Cursor" Value="IBeam"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Control">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter VerticalAlignment="Center" Margin="5,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#115E7B"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#0E7490"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#4B5563"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <Style x:Key="ABButton" TargetType="Button">
            <Setter Property="Width" Value="45"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="4,0,0,0"/>
            <Setter Property="Background" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#475569"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#CBD5E1"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#94A3B8"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border CornerRadius="16" Background="White" BorderBrush="#D1D5DB" BorderThickness="1" Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/> <RowDefinition Height="*"/>  <RowDefinition Height="100"/> </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#115E7B" CornerRadius="16,16,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Margin="20,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="📄" FontSize="20" Margin="0,0,10,0"/>
                        <TextBlock Text="Test Report System" Foreground="White" FontSize="18" FontWeight="Bold"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Button x:Name="MinimizeButton" Content="—" Background="Transparent" BorderThickness="0"
                                Foreground="White" Width="40" Height="40" FontSize="18" FontWeight="Bold"
                                Click="MinimizeButton_Click" Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#0E5A6F"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button x:Name="CloseButton" Content="✕" Background="Transparent" BorderThickness="0"
                                Foreground="White" Width="40" Height="40" FontSize="18" FontWeight="Bold"
                                Click="CloseButton_Click" Cursor="Hand" Margin="5,0,0,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#DC2626"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden" Margin="30,20">
                <StackPanel>
                    <TextBlock Text="시험 성적서 타입 (REPORT TYPE)" Style="{StaticResource LabelText}"/>
                    <ComboBox Style="{StaticResource ModernInput}" Margin="0,0,0,20" Padding="10,0"/>

                    <TextBlock Text="LOAD EXCEL FOLDER" Style="{StaticResource LabelText}"/>
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="60"/></Grid.ColumnDefinitions>
                        <TextBox Style="{StaticResource ModernInput}" Text="C:/Users/Reports/Excel..." Foreground="#9CA3AF"/>
                        <Button Grid.Column="1" Content="📁" Margin="8,0,0,0" Background="#115E7B" Foreground="White"
                                Width="50" Height="45" BorderThickness="0" Cursor="Hand" FontSize="18">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#115E7B"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#0E5A6F"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#0A4A5C"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>

                    <TextBlock Text="의뢰자명 (Client Name)" Style="{StaticResource LabelText}"/>
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                        <TextBox Style="{StaticResource ModernInput}"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="+" Style="{StaticResource ABButton}"/>
                            <Button Content="−" Style="{StaticResource ABButton}"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="의뢰자 주소 (Address)" Style="{StaticResource LabelText}"/>
                    <TextBox Style="{StaticResource ModernInput}" Margin="0,0,0,20"/>

                    <TextBlock Text="성적서 용도 (Purpose)" Style="{StaticResource LabelText}"/>
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                        <ComboBox Style="{StaticResource ModernInput}"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="+" Style="{StaticResource ABButton}"/>
                            <Button Content="−" Style="{StaticResource ABButton}"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="시험대상품목 (Product Item)" Style="{StaticResource LabelText}"/>
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                        <ComboBox Style="{StaticResource ModernInput}"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="+" Style="{StaticResource ABButton}"/>
                            <Button Content="−" Style="{StaticResource ABButton}"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="시험기간 (Test Period)" Style="{StaticResource LabelText}"/>
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="30"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                        <DatePicker Height="45"
                                    VerticalContentAlignment="Center"
                                    Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                    materialDesign:HintAssist.Hint="시작일"
                                    materialDesign:HintAssist.IsFloating="True"/>
                        <TextBlock Grid.Column="1" Text="~" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16"/>
                        <DatePicker Grid.Column="2"
                                    Height="45"
                                    VerticalContentAlignment="Center"
                                    Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                    materialDesign:HintAssist.Hint="종료일"
                                    materialDesign:HintAssist.IsFloating="True"/>
                    </Grid>

                    <TextBlock Text="시험환경 (Environment)" Style="{StaticResource LabelText}"/>
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                        <TextBox Style="{StaticResource ModernInput}" Text="25±2°C, 50±10%R.H."/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="+" Style="{StaticResource ABButton}"/>
                            <Button Content="−" Style="{StaticResource ABButton}"/>
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="20"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="작성자 (Author)" Style="{StaticResource LabelText}"/>
                            <Grid>
                                <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                                <ComboBox Style="{StaticResource ModernInput}"/>
                                <Button Grid.Column="1" Content="A" Style="{StaticResource ABButton}"/>
                            </Grid>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="승인자 (Approver)" Style="{StaticResource LabelText}"/>
                            <Grid>
                                <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                                <ComboBox Style="{StaticResource ModernInput}"/>
                                <Button Grid.Column="1" Content="A" Style="{StaticResource ABButton}"/>
                            </Grid>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="성적서 번호 (Report No.)" Style="{StaticResource LabelText}"/>
                    <TextBox Style="{StaticResource ModernInput}" Margin="0,0,0,20"/>
                </StackPanel>
            </ScrollViewer>

            <Border Grid.Row="2" Background="#F9FAFB" CornerRadius="0,0,16,16" BorderBrush="#E5E7EB" BorderThickness="0,1,0,0">
                <Grid Margin="30,0">
                    <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="80"/></Grid.ColumnDefinitions>
                    
                    <Button Grid.Column="0" Height="55" BorderThickness="0" Foreground="White" FontWeight="Bold" FontSize="16" Cursor="Hand">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#0E7490" Offset="0"/>
                                <GradientStop Color="#115E7B" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="8"
                                                    BorderThickness="0">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.9"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Opacity" Value="0.8"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🖨️ 성적서 발행 (Print)" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Grid.Column="1" Margin="15,0,0,0" Height="55" Background="#F3F4F6"
                            BorderBrush="#D1D5DB" BorderThickness="1" Foreground="#374151" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#F3F4F6"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E5E7EB"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#D1D5DB"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <TextBlock Text="⚙️" FontSize="20" VerticalAlignment="Center"/>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>