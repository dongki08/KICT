<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Core colors -->
    <Color x:Key="PrimaryColor">#2F7D6A</Color>
    <Color x:Key="PrimaryHoverColor">#296D5D</Color>
    <Color x:Key="PrimaryPressedColor">#235C4F</Color>
    <Color x:Key="PrimaryAccentColor">#4A9C88</Color>
    <Color x:Key="PrimaryGradientStartColor">#4A9C88</Color>
    <Color x:Key="PrimaryGradientEndColor">#2F7D6A</Color>

    <Color x:Key="DangerColor">#B91C1C</Color>

    <Color x:Key="WindowBackgroundColor">#0B1220</Color>
    <Color x:Key="CardBackgroundColor">#0F172A</Color>
    <Color x:Key="SurfaceBackgroundColor">#0B1220</Color>

    <Color x:Key="BorderColor">#1F2937</Color>
    <Color x:Key="BorderLightColor">#1F2937</Color>
    <Color x:Key="InputBorderColor">#334155</Color>

    <Color x:Key="InputBackgroundColor">#111827</Color>
    <Color x:Key="PopupBackgroundColor">#0F172A</Color>
    <Color x:Key="PopupBorderColor">#334155</Color>

    <Color x:Key="TextPrimaryColor">#E5E7EB</Color>
    <Color x:Key="TextSecondaryColor">#CBD5E1</Color>
    <Color x:Key="TextMutedColor">#94A3B8</Color>
    <Color x:Key="TextOnPrimaryColor">#F8FAFC</Color>

    <Color x:Key="ComboItemHoverColor">#1E293B</Color>
    <Color x:Key="ComboItemSelectedColor">#334155</Color>
    <Color x:Key="ComboItemSelectedHoverColor">#3B4A5A</Color>
    <Color x:Key="ComboItemSelectedTextColor">#E2E8F0</Color>

    <Color x:Key="ButtonNeutralBackgroundColor">#1F2937</Color>
    <Color x:Key="ButtonNeutralHoverColor">#2A3A4F</Color>
    <Color x:Key="ButtonNeutralPressedColor">#3B4F6A</Color>

    <Color x:Key="ButtonSecondaryBackgroundColor">#111827</Color>
    <Color x:Key="ButtonSecondaryHoverColor">#1F2937</Color>
    <Color x:Key="ButtonSecondaryPressedColor">#2A3A4F</Color>
    <Color x:Key="ButtonSecondaryBorderColor">#334155</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="{StaticResource PrimaryHoverColor}" />
    <SolidColorBrush x:Key="PrimaryPressedBrush" Color="{StaticResource PrimaryPressedColor}" />
    <SolidColorBrush x:Key="PrimaryAccentBrush" Color="{StaticResource PrimaryAccentColor}" />

    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}" />

    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBackgroundColor}" />
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackgroundColor}" />
    <SolidColorBrush x:Key="SurfaceBackgroundBrush" Color="{StaticResource SurfaceBackgroundColor}" />

    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />
    <SolidColorBrush x:Key="BorderLightBrush" Color="{StaticResource BorderLightColor}" />
    <SolidColorBrush x:Key="InputBorderBrush" Color="{StaticResource InputBorderColor}" />

    <SolidColorBrush x:Key="InputBackgroundBrush" Color="{StaticResource InputBackgroundColor}" />
    <SolidColorBrush x:Key="PopupBackgroundBrush" Color="{StaticResource PopupBackgroundColor}" />
    <SolidColorBrush x:Key="PopupBorderBrush" Color="{StaticResource PopupBorderColor}" />

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMutedColor}" />
    <SolidColorBrush x:Key="TextOnPrimaryBrush" Color="{StaticResource TextOnPrimaryColor}" />

    <SolidColorBrush x:Key="ComboItemHoverBrush" Color="{StaticResource ComboItemHoverColor}" />
    <SolidColorBrush x:Key="ComboItemSelectedBrush" Color="{StaticResource ComboItemSelectedColor}" />
    <SolidColorBrush x:Key="ComboItemSelectedHoverBrush" Color="{StaticResource ComboItemSelectedHoverColor}" />
    <SolidColorBrush x:Key="ComboItemSelectedTextBrush" Color="{StaticResource ComboItemSelectedTextColor}" />

    <SolidColorBrush x:Key="ButtonNeutralBackgroundBrush" Color="{StaticResource ButtonNeutralBackgroundColor}" />
    <SolidColorBrush x:Key="ButtonNeutralHoverBrush" Color="{StaticResource ButtonNeutralHoverColor}" />
    <SolidColorBrush x:Key="ButtonNeutralPressedBrush" Color="{StaticResource ButtonNeutralPressedColor}" />

    <SolidColorBrush x:Key="ButtonSecondaryBackgroundBrush" Color="{StaticResource ButtonSecondaryBackgroundColor}" />
    <SolidColorBrush x:Key="ButtonSecondaryHoverBrush" Color="{StaticResource ButtonSecondaryHoverColor}" />
    <SolidColorBrush x:Key="ButtonSecondaryPressedBrush" Color="{StaticResource ButtonSecondaryPressedColor}" />
    <SolidColorBrush x:Key="ButtonSecondaryBorderBrush" Color="{StaticResource ButtonSecondaryBorderColor}" />
</ResourceDictionary>
